| {{ partial "head.html" . }}

body
    .section#splash
        | {{ if .Site.Params.mainMenu }}
        | {{ range .Site.Params.mainMenu }}
        #big-link 
            a(href='{{.link}}') {{.text}}
        | {{ end }}
        | {{ else }}
        | {{ range .Site.Sections }}
        #big-link 
            a(href='{{.Permalink}}') {{.Title}}
        | {{ end }}
        | {{ end }}
        .section.bottom-menu-spacer        
        .section.bottom-menu-small
            p
                | {{ range first 1 .Site.Params.subMenu }}
                a(href='{{ .link }}') {{ .text }}
                | {{ end }}
                | {{ range after 1 .Site.Params.subMenu }}
                | &#183; 
                a(href='{{ .link }}') {{ .text }}
                | {{ end }}
